<Page
    x:Class="WindowsSecurityClone.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsSecurityClone"
    Background="#000000">
	<Grid Padding="30,60">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0">
			<TextBlock Text="Security at a glance"
                       Foreground="White"
                       FontSize="24"
                       Margin="0,0,0,10" />
			<TextBlock Text="See what's happening with the security and health of your device and take any actions needed."
                       Foreground="LightGray"
                       FontSize="12"
                       Margin="0,5,0,30"
                       MaxWidth="370"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Left" />
		</StackPanel>

		<Grid Grid.Row="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="250"/>
				<ColumnDefinition Width="250"/>
				<ColumnDefinition Width="250"/>
				<ColumnDefinition Width="250"/>
			</Grid.ColumnDefinitions>

			<Border Grid.Row="0" Grid.Column="0"
                    Background="Transparent"
                    CornerRadius="4"
                    Margin="0,0,10,10"
                    Padding="20">
				<StackPanel>
					<Grid>
						<FontIcon Glyph="&#xEA18;" Foreground="#0078D7" FontSize="50" HorizontalAlignment="Left" VerticalAlignment="Center"/>
					</Grid>
					<TextBlock Text="Virus &amp; threat protection" Foreground="White" FontSize="14" Margin="0,10,0,5"/>
					<TextBlock Text="Your Virus &amp; threat protection is managed by your organization." Foreground="LightGray" FontSize="12" TextWrapping="Wrap"/>
				</StackPanel>
			</Border>

			<Border Grid.Row="0" Grid.Column="1"
                    Background="Transparent"
                    CornerRadius="4"
                    Margin="0,0,10,10"
                    Padding="20">
				<StackPanel>
					<Grid>
						<FontIcon Glyph="&#xE77B;"  Foreground="#0078D7" FontSize="50" HorizontalAlignment="Left" VerticalAlignment="Center"/>
						<Grid HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,30,0,0">
							<Ellipse Width="25" Height="25" Fill="#107C10" />
							<FontIcon Glyph="&#xE73E;" Foreground="White" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Grid>
					</Grid>
					<TextBlock Text="Account protection" Foreground="White" FontSize="14" Margin="0,10,0,5"/>
					<TextBlock Text="No action needed." Foreground="LightGray" FontSize="12"/>
				</StackPanel>
			</Border>
			
			<Border Grid.Row="0" Grid.Column="2"
                    Background="Transparent"
                    CornerRadius="4"
					Margin="0,0,10,10"
                    Padding="20">
				<StackPanel>
					<Grid>
						<FontIcon Glyph="&#xE704;"  Foreground="#0078D7" FontSize="50" HorizontalAlignment="Left" VerticalAlignment="Center"/>
						<Grid HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,30,0,0">
							<Ellipse Width="25" Height="25" Fill="#107C10" />
							<FontIcon Glyph="&#xE73E;" Foreground="White" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Grid>
					</Grid>
					<TextBlock Text="Firewall &amp; network protection" Foreground="White" FontSize="14" Margin="0,10,0,5"/>
					<TextBlock Text="No action needed." Foreground="LightGray" FontSize="12"/>
				</StackPanel>
			</Border>
			<Border Grid.Row="0" Grid.Column="3"
                    Background="Transparent"
                    CornerRadius="4"
					Margin="0,0,10,10"
                    Padding="20">
				<StackPanel>
					<Grid>
						<FontIcon Glyph="&#xE737;" Foreground="#0078D7" FontSize="50" HorizontalAlignment="Left" VerticalAlignment="Center"/>
						<Grid HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,30,0,0">
							<Ellipse Width="25" Height="25" Fill="#107C10" />
							<FontIcon Glyph="&#xE73E;" Foreground="White" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Grid>
					</Grid>
					<TextBlock Text="App &amp; browser control" Foreground="White" FontSize="14" Margin="0,10,0,5"/>
					<TextBlock Text="No action needed." Foreground="LightGray" FontSize="12"/>
				</StackPanel>
			</Border>

			<Border Grid.Row="2" Grid.Column="0"
		Background="Transparent"
		CornerRadius="4"
		Margin="0,0,10,10"
		Padding="20">
				<StackPanel>
					<Grid>
						<FontIcon Glyph="&#xE7F8;" Foreground="#0078D7" FontSize="50" HorizontalAlignment="Left" VerticalAlignment="Center"/>
						<Grid HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,30,0,0">
							<Ellipse Width="25" Height="25" Fill="#107C10" />
							<FontIcon Glyph="&#xE73E;" Foreground="White" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Grid>
					</Grid>
					<TextBlock Text="Device security" Foreground="White" FontSize="14" Margin="0,10,0,5"/>
					<TextBlock Text="View status and manage hardware security features." Foreground="LightGray" FontSize="12" TextWrapping="Wrap"/>
				</StackPanel>
			</Border>

			<Border Grid.Row="2" Grid.Column="1"
                    Background="Transparent"
                    CornerRadius="4"
                    Margin="0,0,10,10"
                    Padding="20">
				<StackPanel>
					<Grid>
						<FontIcon Glyph="&#xE95E;"  Foreground="#0078D7" FontSize="50" HorizontalAlignment="Left" VerticalAlignment="Center"/>
					</Grid>
					<TextBlock Text="Device performance &amp; health" Foreground="White" FontSize="14" Margin="0,10,0,5"/>
					<TextBlock Text="No action needed." Foreground="LightGray" FontSize="12"/>
				</StackPanel>
			</Border>

			<Border Grid.Row="2" Grid.Column="2"
                    Background="Transparent"
                    CornerRadius="4"
					Margin="0,0,10,10"
                    Padding="20">
				<StackPanel>
					<Grid>
						<FontIcon Glyph="&#xE716;"  Foreground="#0078D7" FontSize="50" HorizontalAlignment="Left" VerticalAlignment="Center"/>
					</Grid>
					<TextBlock Text="Family options" Foreground="White" FontSize="14" Margin="0,10,0,5"/>
					<TextBlock Text="No action needed." Foreground="LightGray" FontSize="12"/>
				</StackPanel>
			</Border>
			<Border Grid.Row="2" Grid.Column="3"
                    Background="Transparent"
                    CornerRadius="4"
					Margin="0,0,10,10"
                    Padding="20">
				<StackPanel>
					<Grid>
						<FontIcon Glyph="&#xE81C;"  Foreground="#0078D7" FontSize="50" HorizontalAlignment="Left" VerticalAlignment="Center"/>
					</Grid>
					<TextBlock Text="Protection history" Foreground="White" FontSize="14" Margin="0,10,0,5"/>
					<TextBlock Text="View latest protection actions and recommendations." Foreground="LightGray" FontSize="12"/>
				</StackPanel>
			</Border>
			
		</Grid>
	</Grid>
</Page>