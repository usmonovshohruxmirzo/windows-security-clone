<Page
    x:Class="WindowsSecurityClone.AppBrowserControlPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsSecurityClone"
    Background="#000000">

	<Grid Padding="30,60">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0">
			<Grid Margin="0,0,0,10">
				<FontIcon Glyph="&#xE737;" HorizontalAlignment="Left" FontSize="25"/>
				<TextBlock Text="App &amp; browser control" Foreground="White" FontSize="24" Margin="40,0,0,0" />
			</Grid>
			<TextBlock Text="App protection and online security"
                       Foreground="LightGray"
                       FontSize="12"
                       Margin="0,5,0,30"
                       MaxWidth="370"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Left" />
		</StackPanel>

        <StackPanel Margin="20" HorizontalAlignment="Right" Width="250">
            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="Have a question?" Foreground="White" FontSize="16" Margin="0,0,0,10" />
                <TextBlock Text="Get help" Foreground="#E1E100" FontSize="14"/>
            </StackPanel>

            <StackPanel Margin="0,40,0,0">
                <TextBlock Text="Who's protecting me?" Foreground="White" FontSize="16" Margin="0,0,0,10" />
                <TextBlock Text="Manage providers" Foreground="#E1E100" FontSize="14"/>
            </StackPanel>

            <StackPanel Margin="0,40,0,0">
                <TextBlock Text="Help improve Windows Security" Foreground="White" FontSize="16" Margin="0,0,0,10" />
                <TextBlock Text="Give us feedback" Foreground="#E1E100" FontSize="14" />
            </StackPanel>

            <StackPanel Margin="0,40,0,0">
                <TextBlock Text="Change your privacy settings" Foreground="White" FontSize="16" Margin="0,0,0,10"/>
                <TextBlock Text="View and change privacy settings for your Windows 11 Home device." Foreground="Gray" FontSize="16" TextWrapping="Wrap" Margin="0,0,0,10" />
                <TextBlock Text="Privacy settings" Foreground="#E1E100" FontSize="14"  Margin="0,0,0,10" />
                <TextBlock Text="Privacy dashboard" Foreground="#E1E100" FontSize="14"  Margin="0,0,0,10" />
                <TextBlock Text="Privacy Statement" Foreground="#E1E100" FontSize="14"  Margin="0,0,0,10" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>