<Page
    x:Class="WindowsSecurityClone.VirusThreatProtectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsSecurityClone"
    Background="#000000">

	<Grid Padding="30,60">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		
		<StackPanel Grid.Row="0">
			<TextBlock Text="Security at a glance"
                       Foreground="White"
                       FontSize="24"
                       Margin="0,0,0,10" />
			<TextBlock Text="See what's happening with the security and health of your device and take any actions needed."
                       Foreground="LightGray"
                       FontSize="12"
                       Margin="0,5,0,30"
                       MaxWidth="370"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Left" />
		</StackPanel>
	</Grid>
</Page>